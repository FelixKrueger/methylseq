nextflow_workflow {

    name "Test Workflow BISMARK"
    script "../main.nf"
    workflow "BISMARK"

    test("Bismark Single-End") {

        when {
            workflow {
                """
                skip_deduplication = false
                cytosine_report    = false

                input[0] = file(https://github.com/nf-core/test-datasets/raw/methylseq/testdata/SRR389222_sub1.fastq.gz) // reads
                input[1] = file(https://github.com/nf-core/test-datasets/raw/methylseq/reference/Bowtie2_Index.tar.gz) // bismark_index
                input[2] = skip_deduplication
                input[3] = cytosine_report
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }

    }

}
